@model IEnumerable<CafeDelMar.Models.ItemOrdered>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.1.4.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.4.0/knockout-min.js"></script>
    <title>GetAllOrders</title>
</head>
<body>
    <nav class="navbar navbar-inverse  navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Cafe Del Mar</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/Home/Menu">Home</a></li>
                    <li><a href="/Home/Menu">Menu</a></li>
                    <li><a href="/Home/About">About</a></li>
                    <li><a href="#footer">Contact</a></li>
                    <li><a href="/Home/GetAllOrders">Info</a></li>
                    <li><a href="/Home/Feedback">Feedback</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container"> 
        <div class="row row-content">
            <div class="col-xs-12 col-sm-9">
                <h2>Facts &amp; Figures</h2>
                <div class="table-responsive">
                    <table class="table table-stripped table-hover" >
                        <tr>
                            <th>&nbsp;</th>
                            <th>Order Count</th>
                            <th>Sales(&#8377;)</th>
                        </tr>
                       @foreach (var item in Model)
                       {
                           <tr>
                               <th>@item.Name</th>
                               <td>@item.Count</td>
                               <td>@item.TotalIncome</td>
                           </tr>
                       }
                       
                    </table>
                </div>
            </div> 
        </div> 
         
    </div>
</body>
</html>
